<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag 'favicon.ico' %>
  <title>Online Converter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="header">
	<div class="top">
		<div class="top-left">
			online converter
		</div>
		<div class="top-right">
			<%= get_user %>
		</div>
	</div>
</div>


<div class="nav">
	<ul class="nav_menu">
		<%= nav_link "Home", news_path %>
		<% if user_signed_in? %>
			<%= nav_link "Convert", request_path(first_converter) %>
			<%= nav_link "Requests", my_requests_path %>
			<ul class="nav_menu pull-right">
				<%= nav_link "Edit profile", edit_user_registration_path %>
				<%= nav_link "Logout", destroy_user_session_path, method: :delete %>
			</ul>
		<% else %>
			<ul class="nav_menu pull-right">
				<%= nav_link "Sign up", new_user_registration_path %>
				<%= nav_link "Login", new_user_session_path %>
			</ul>
		<% end %>
		<%= nav_link "Contact", contact_path %>
		<%= nav_link "About", about_path %>
	</ul>
</div>
<div class="error_messages">
	<%= set_messages %>
</div>
<div class="banner_wrapper">
  <div class="banner_image">
  </div>
</div>

<div class="main_div">
	<%= yield %>
</div>
<div class="footerholder">
  <div class="footer">
    <p>Contact information: <a href="online.converter.inc@gmail.com">online.converter.inc@gmail.com</a>.</p>
      <p> Â© 2015 Online Converter, Inc. All rights reserved.</p>
  </div>
</div>
</body>
</html>
