<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:labelFor="@+id/create_request_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_request_url" />

    <EditText
        android:id="@+id/create_request_url"
        android:inputType="textUri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/create_request_url_hint" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:labelFor="@+id/create_request_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_request_format" />

    <EditText
        android:inputType="textNoSuggestions"
        android:hint="@string/create_request_format_hint"
        android:id="@+id/create_request_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <Button
        android:id="@+id/create_request_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_request_submit" />

</LinearLayout>
